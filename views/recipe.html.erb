<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Instructions</td>
    </tr>
  </thead>

  <tbody>
    <% @recipe_info.each do |item| %>
      <tr>
        <td>
          <%= "#{item["name"]}" %>
        </td>
        <td>
          <%= "#{item["description"]}" %>
        </td>
        <td>
          <%= "#{item["instructions"]}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Ingredients</h3>
<ul>
  <% @recipe_ingredients.each do |ingredient| %>
    <li>
      <%= "#{ingredient["name"]}" %>
    </li>
  <% end %>
</ul>
